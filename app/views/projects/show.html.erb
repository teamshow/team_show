<%= render '/welcome/nav'%>

<div class="container" style="position:relative;min-height: 390px">
  <ol class="breadcrumb">
    <li><a href="/">主页</a></li>
    <li><a href="/projects">项目列表</a></li>
    <li class="active"><%= @project[:name]%></li>
  </ol>
  <div align="center">
    <h1>
      <%= @project[:name]%>
    </h1>
  </div>
  <div align="right">
    <label class="show-date">
      创建日期:<%= %><br>浏览量:
    </label>
  </div>
  <table class="table index-show">
    <thead>
      <tr style="">
        <td style="width: 75%;font-weight: bold">项目详情</td>
        <td style="width: 25%;font-weight: bold">成员</td>
      </tr>
    </thead>
  </table>
  <div style="width:65%; min-height: 300px" class="project-show">
    <p style="text-indent: 2em"> <%= @project[:description]%></p>
  </div>
  <div style="width: 20%;margin-left: 10%;min-height: 200px;float: left;position: relative">
    <div style="width: 100%;min-height: 100px" class="project-show">
      <% @members.each do |m|%>
          <p style="margin-left: 20%"><%= m.name%></p>
      <%end%>
    </div>
    <div style="width: 40%;position:absolute; left: 30%;bottom: 40px">
      <% if session[:ut]!=nil%>
          <button class="btn btn-success" style="width: 100%">加入</button>
      <% else %>
          <a href="../memberships/login" role="button" class="btn btn-success" style="width: 100%">加入</a>
      <% end%>

  </div>
  </div>
</div>


<%= render 'welcome/footer' %>