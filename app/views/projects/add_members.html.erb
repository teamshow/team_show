<%= render 'article/nav'%>
<h1>Add Project Members</h1>

<div class="container-fluid">
  <div class="row-fluid">
    <div class="col-xs-8">
      <table class="table">
        <thead>
        <tr>
          <th>
            member name
          </th>
          <th>
            options
          </th>
        </tr>
        </thead>
        <tbody>
        <% @members_all.each do |m| %>
        <tr>
          <td>
            <%= m.name%>
          </td>
          <td>
            <% if @map[m.id] == 'yes' %>
                <%# path 后面直接跟+%>
                <%=link_to '[X]', projects_add_members_path+'?del_member_id='+m[:id].to_s+'&project_id='+session[:project_id] %>
            <% else%>
                <%=link_to '[A]', projects_add_members_path+'?add_member_id='+m[:id].to_s+'&project_id='+session[:project_id] %>
            <% end%>
          </td>
        </tr>
        <%end%>
        </tbody>
      </table>
    </div>
    <div class="col-xs-4">
    </div>
  </div>
</div>