<%= render '/welcome/nav'%>

<div class="container" style="min-height: 390px">
  <h2 align="center">EDIT</h2>
  <div class="toMiddle" style="height: 4px;margin-bottom: 10px;margin-top: -5px"></div>
  <div style="width: 95%;float: right;margin-right: 2.5%">
    <ul class="nav nav-tabs nav-justified">
      <li role="presentation"><a href="../articles/modify">Article</a></li>
      <li role="presentation"><a href="../notices/modify">Notice</a></li>
      <li role="presentation" class="active"><a href="">Project</a></li>
    </ul>
    <div style="width:100%; border: solid #ddd 1px;border-top: none;height: 500px">
      <%= form_for :projects_edt, url: :projects_edt_handle do |f| %>
          <div class="panel-body">
            <form class="form-horizontal" role="form">
              <div style="float: left;width: 75%">
                <div class="form-group" >
                  <%= f.label(:title, class: 'col-sm-2 control-label') %>
                  <div class="col-sm-10">
                    <%= f.text_field  :title, :value => @project.name, class: 'form-control' %>
                  </div>
                </div>
                <div class="form-group" style="clear: both">
                  <%= f.label  :description, class: 'col-sm-2 control-label text-top' %>
                  <div class="col-sm-10" style="margin-top: 10px">
                    <%= f.text_area  :description, :value => @project.description , rows:15, class: 'form-control'%>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-12" align="right" style="margin-top: 3%;padding-left: 20%">
                    <%= f.submit('Save Changes', class:'btn btn-success btn-sm') %>
                  </div>
                </div>
              </div>
              <div style="float: left;width: 25%;padding-left: 2.5%;padding-right: 2.5%">
                <div class="panel panel-primary project-panel">
                  <div class="panel-heading" style="font-size: inherit !important;padding-top: 4px;padding-bottom: 4px">
                    <div class="panel-title" align="center" style="font-weight: bold">
                      Project Status
                    </div>
                  </div>
                  <div class="panel-body" style="padding: 5px">
                    <label>
                      <textarea readonly class="form-control" rows="5" style="width: 100%;padding-left: 25%">Status1&#13;&#10;Status2&#13;&#10;Status3&#13;&#10;Status4&#13;&#10;Status5&#13;&#10;Status6</textarea>
                    </label>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-12" align="right" style="margin-top: -5%;padding-right: 0">
                    <%= link_to 'Add status', projects_add_status_path+'?'+'add='+@project.id.to_s,class: 'btn btn-success btn-sm',style: 'width: auto !important;'%>
                  </div>
                </div>
                <div class="panel panel-primary project-panel" style="margin-top: 15px">
                  <div class="panel-heading" style="font-size: inherit !important;padding-top: 4px;padding-bottom: 4px">
                    <div class="panel-title" align="center" style="font-weight: bold">
                      Project Members
                    </div>
                  </div>
                  <div class="panel-body" style="padding: 5px">
                    <label>
                      <textarea readonly class="form-control" rows="4" style="width: 100%;padding-left: 25%">Member1&#13;&#10;Member2&#13;&#10;Member3&#13;&#10;Member4&#13;&#10;Member5&#13;&#10;Member6</textarea>
                    </label>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-12" align="right" style="margin-top: -5%;padding-right: 0">
                    <%= link_to 'Add members', projects_add_members_path+'?project_id='+@project.id.to_s,class: 'btn btn-success btn-sm',style: 'width: auto !important;'%>
                  </div>
                </div>
              </div>
            </form>
          </div>
      <%end%>
    </div>
  </div>
</div>

<%= render 'welcome/footer' %>