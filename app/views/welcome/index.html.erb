<%= render '/welcome/nav' %>

<div class="container" style="min-height: 100%">
  <div class="row">
    <div class="row">
      <div class="col-xs-7">
        <table class="table">
          <tr>
            <th>Articles</th>
            <th style="text-align: right"><a href="/articles">+ more</a></th>
          </tr>
        </table>
        <div class="toRight" style="height: 4px;margin-top: -28px"></div>
        <table class="table table-hover index-show">
          <% @i = 0 %>
          <% @articles.each do |r| %>
              <%
                 params[:id] = r.id

                 if @i > 5
                   break
                 end
                 @i += 1
                 puts "#{r}"
              %>
              <tr>
                <td><%= link_to r.title, articles_path + '/' + r.id.to_s %></td>
                <td class="index-date"><%= r[:created_at] %></td>
              </tr>
          <% end %>
        </table>

      </div>
      <div class="col-xs-5">
        <table class="table">
          <tr>
            <th>Notices</th>
            <th style="text-align: right"><a href="/notices">+ more</a></th>
          </tr>
        </table>
        <div class="toLeft" style="height: 4px;margin-top: -28px"></div>
        <table class="table table-hover index-show">
          <% @i = 0 %>
          <% @notices.each do |r| %>
              <%
                 params[:id] = r.id
                 if @i > 5
                   break
                 end
                 @i += 1
                 puts "#{r}"
              %>
              <tr>
                <td><%= link_to r.title, notices_path + '/' + r.id.to_s %></td>
                <td class="index-date"><%= r[:created_at] %></td>
              </tr>
          <% end %>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-7">
        <table class="table">
          <tr>
            <th>Projects</th>
            <th style="text-align: right"><a href="/projects">+ more</a></th>
          </tr>
        </table>
        <div class="toRight" style="height: 4px;margin-top: -28px"></div>
        <table class="table table-hover index-show">
          <% @i = 0 %>
          <% @projects.each do |r| %>
              <%
                 params[:id] = r.id

                 if @i > 5
                   break
                 end
                 @i += 1
                 puts "#{r}"
              %>
              <tr>
                <td><%= link_to r.name, projects_path + '/' + r.id.to_s %></td>
              </tr>
          <% end %>

        </table>
      </div>
      <div class="col-xs-5">
        <table class="table">
          <tr>
            <th>About Us</th>
            <!--<th style="text-align: right"><a href="/projects">+ more</a></th>-->
          </tr>
        </table>
        <div class="toLeft" style="height: 4px;margin-top: -28px"></div>
        <table class="table table-hover index-show">
          <td>劳力士创始人为汉斯.威尔斯多夫，1908年他在瑞士将劳力士注册为商标。</td>
        </table>
      </div>
    </div>
  </div>
</div>

<%= render 'footer' %>