<%= render '/welcome/nav'%>

<div class="container">
  <h2>修改通知</h2>
  <div class="toRight" style="height: 4px"></div>
  <div class="row">
    <div class="col-xs-12">
      <table class="table index-show table-hover" style="vertical-align: middle">
        <tbody>
          <% @notices.each do |r|%>
            <tr class="bg-warning">
              <td style="width: 65%">
                <strong>&bull;&nbsp;</strong><%= r.title %>
              </td>
              <td style="width: 25%">
                <%= r.updated_at%>
              </td>
              <td style="text-align: center; width: 5%;text-decoration: underline" class="article-modify">
                <%= link_to '编辑', notices_edt_path+'?'+'edt='+r.id.to_s%>
              </td>
              <td style="text-align: center; width: 5%;text-decoration: underline" class="article-modify">
                <%= link_to '删除', notices_modify_path+'?'+'del='+r.id.to_s%>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= render 'welcome/footer' %>